package evaluation;

import java.util.Scanner;

import secondquestion.Ticket;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner in = new Scanner(System.in);
		
		System.out.println("Enter Number of Students you want to enter:");
		int noOfStudent = in.nextInt();
		
		Student [] arr = new Student[noOfStudent];
		
		for(int i=0; i<arr.length; i++)
		{
		System.out.println("Enter the Roll Number :");
		int stdentRollNo = in.nextInt();
		
		System.out.println("Enter the Name");
		String studentName = in.next();
		
		System.out.println("Enter the marks :");
		String stdentMarks = in.next();
		
		Student s1 = new Student();
		
		s1.setRollNumber(stdentRollNo);
		s1.setStudentName(studentName);
		s1.setMarks(stdentMarks);
		
		System.out.println("Student Detail: "+i);
        System.out.println("Student Roll Number: "+s1.getRollNumber());
        System.out.println("Student Name: "+s1.getStudentName());
        System.out.println("Student Marks: "+s1.getMarks());
        System.out.println("==========================================");
  	  
		
		}

	}

}
